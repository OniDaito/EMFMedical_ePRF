<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

      <TableRow
            android:id="@+id/tableRow13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000" >

            <TextView
                android:id="@+id/observation_actual_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observation"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:textStyle="bold"
                android:typeface="normal" />
        </TableRow>
        
       <TableRow
           android:id="@+id/tableRow13"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp" >

               <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

           <TextView
               android:id="@+id/textView1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="100dp"
               android:text="Observation Time"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:textSize="22sp" />
           
             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Response"
                 android:textAppearance="?android:attr/textAppearanceMedium"
                 android:textSize="22sp" />

             </LinearLayout>
          
        </TableRow>
    
      <TableRow
          android:id="@+id/tableRow1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="20dp" >

    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal" >

        <TimePicker
            android:id="@+id/observation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp" />

        <Spinner
            android:id="@+id/observation_response"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/response_options" />

    

    </LinearLayout>

    </TableRow>
    
        <TableRow
            android:id="@+id/tableRow14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Respiratory Rate"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/observation_respiratory_rate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/textView2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:width="80dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/observation_respiratory_rate"
                    android:text="Pulse Rate"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/observation_pule_rate"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView3"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:width="80dp" >

                </EditText>
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Pain Score"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <RadioGroup
                    android:id="@+id/observation_pain_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView4"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/observation_pain_score_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="0" />

                    <RadioButton
                        android:id="@+id/observation_pain_score_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1" />

                    <RadioButton
                        android:id="@+id/observation_pain_score_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />

                    <RadioButton
                        android:id="@+id/observation_pain_score_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3" />
                </RadioGroup>
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

                <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/observation_o2_saturation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="O2 Saturation"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/observation_o2_saturation"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/observation_o2_saturation_label"
                    android:ems="10"
                    android:inputType="number"
                    android:width="80dp" />

            </RelativeLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

             <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Oxygen (LPM)"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/observation_oxygen"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/textView6"
                    android:ems="10"
                    android:inputType="number"
                    android:width="80dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/observation_oxygen"
                    android:text="Entonox"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/observation_entonox"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView7"
                    android:ems="10"
                    android:width="80dp" />

            </RelativeLayout>

        </TableRow>

     

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
                 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Blood Pressure"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/observation_blood_pressure_systolic"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView8"
                android:ems="10"
                android:width="80dp"
                android:inputType="number" />
            
             <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/observation_blood_pressure_systolic"
                android:textSize="32dp"
                android:text="/"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/observation_blood_pressure_dystolic"
                android:layout_width="80dp"
                android:layout_toRightOf="@id/textView28"
                android:layout_height="wrap_content"
                android:ems="10"
                android:width="80dp"
                android:inputType="number" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" >

                <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="Temperature (C)"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/observation_temperature"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/textView9"
                android:ems="10"
                android:inputType="numberDecimal"
                android:width="80dp" />
            
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/observation_temperature"
                android:text="Blood Sugar"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/observation_blood_sugar"
                android:layout_toRightOf="@id/textView10"
                android:layout_width="80dp"
                android:width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"/>
            </RelativeLayout>
        </TableRow>

      

        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Left Pupils reactive? (Y/N)"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right Pupil reactive? (Y/N)"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/observation_pupils_reactive_left_yes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <CheckBox
                    android:id="@+id/observation_pupils_reactive_left_no"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_toRightOf="@id/observation_pupils_reactive_left_yes"
                    android:text="No" />

                <CheckBox
                    android:id="@+id/observation_pupils_reactive_right_yes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/observation_pupils_reactive_left_no"
                    android:text="Yes" />

                <CheckBox
                    android:id="@+id/observation_pupils_reactive_right_no"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/observation_pupils_reactive_right_yes"
                    android:text="No" />

            </RelativeLayout>

        </TableRow>

          <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
                 <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pupil Size (L/R)"
                android:textAppearance="?android:attr/textAppearanceMedium" />
              </TableRow>
        
        
        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
       
            <Spinner
                android:id="@+id/observation_pupil_size_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:entries="@array/pupil_size_options" />

            <Spinner
                android:id="@+id/observation_pupil_size_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/pupil_size_options"
                android:prompt="@array/pupil_size_options" />
            </LinearLayout>
            
        </TableRow>

</TableLayout>