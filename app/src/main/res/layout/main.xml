<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_small" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp" >

        <Button
            android:id="@+id/main_start_new_prf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginBottom="20dp"
            android:text="Start New PRF"
            android:textSize="32sp" />

        <Button
            android:id="@+id/main_minor_wound_dressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor Wound Dressed"
            android:paddingBottom="20dp"
            android:textSize="32sp" />

    </TableLayout>

    <RelativeLayout
        android:id="@+id/main_prf_list_heading"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Reports to Encrypt"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="28sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_prf_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp">


    </LinearLayout>


</LinearLayout>
