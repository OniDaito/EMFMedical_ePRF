<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >




        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Write in box below or use checkboxes"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>


            <EditText
                android:id="@+id/treatment_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:width="400dp"
                android:inputType="textMultiLine"
                android:lines="10"
                android:minLines="6" />

            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:id="@+id/treatment_wound_cleansed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wound Cleansed" />

                <CheckBox
                    android:id="@+id/treatment_wound_dressed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wound Dressed" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >



                <CheckBox
                    android:id="@+id/treatment_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Treatment Required" />


                <CheckBox
                    android:id="@+id/treatment_rice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rest Ice Comfort Elevate" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >




                <CheckBox
                    android:id="@+id/treatment_adhesive_dressing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adhesive Dressing" />





            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >




                <CheckBox
                    android:id="@+id/treatment_recovery_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recovery Position" />



            </TableRow>


         

            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >


                <CheckBox
                    android:id="@+id/treatment_sling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sling" />

                <CheckBox
                    android:id="@+id/treatment_splint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Splint" />

            </TableRow>


        </TableLayout>

    </ScrollView>

</LinearLayout>
